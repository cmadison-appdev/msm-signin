<!DOCTYPE html>
<html>
  <head>
    <title>MSM SIGNIN</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
  <nav>
      <ul>
      <li> <%= @current_user.inspect %> </li>
         <% if @current_user == nil %>
          <li>
            <a href="/user_sign_in">
              Sign in
            </a>
          </li>
          <li>
            <a href="/user_sign_up">
              Sign up
            </a>
          </li>
           <% else %>
            <li>
              <a href="/user_sign_out">
                Sign out
              </a>
            </li>
            <li>
              <a href="/edit_user_profile">
                Edit Profile
              </a>
            </li>
           <% end %> 
        <li>
          <a href="/">
            Home
          </a>
        </li>
        <li>
          <a href="/bookmarks">
            Bookmarks
          </a>
        </li>
        <li>
          <a href="/movies">
            Movies
          </a>
        </li>
        <li>
          <a href="/actors">
            Actors
          </a>
        </li>
        <li>
          <a href="/directors">
            Directors
          </a>
        </li>
      </ul>
  </nav>
    <%= yield %>
    <footer>
      <small>
        This product uses the TMDb API but is not endorsed or certified by TMDb.
      </small>
    </footer>
  </body>
</html>
